@model MovieVM
@{
    ViewData["Title"] = "Edit Movie";
}

<div class="text-center">
    <h1 class="display-4">Edit Movie</h1>
</div>


<form asp-action="Edit" asp-controller="Movies" asp-antiforgery="true">
    <input asp-for="Id" hidden="hidden" />
    <table>
        <tr>
            <td>Title:</td>
            <td><input asp-for="Title" /></td>
        </tr>
        <tr>
            <td>Year:</td>
            <td>
                @*<asp:RegularExpressionValidator ID="YearValidator"
                                                ControlToValidate="year" runat="server"
                                                ErrorMessage="Only Numbers allowed"
                                                ValidationExpression="\d+">
                </asp:RegularExpressionValidator>*@
                @Html.TextBoxFor(m => m.Year, new { @type = "number" })
            </td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreTypes>()">
                    <option selected="" value="" />
                </select>
            </td>
        </tr>
        <tr>
            <td>Rate:</td>
            <td>
                <select asp-for="Rate" asp-items="Html.GetEnumSelectList<RateTypes>()">
                    <option selected="" value="" />
                </select>
            </td>
        </tr>
        <tr class="">
            <td><input type="submit" value="Update"  class="btn btn-primary active bottom-buttons"/></td>
            <td>@Html.ActionLink("Cancel", "Index", new { controller = "Movies" }, new { @class = "btn btn-secondary bottom-buttons" })</td>
        </tr>
    </table>
</form>